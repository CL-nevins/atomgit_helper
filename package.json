{
  "name": "git-emoji-atomgit",
  "displayName": "git-emoji-atomgit",
  "description": "git-emoji-atomgit 插件",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "author": {
    "name": "atomgit"
  },
  "publisher": "atomgit",
  "repository": {
    "type": "git",
    "url": "https://atomgit.com/nevins_repo/git-emoji-atomgit"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "icon": "resources/logo.png",
  "preview": false,
  "keywords": [
    "git",
    "emoji",
    "atomgit"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-emoji-atomgit.gitEmoji",
        "title": "git emoji: emoji list",
        "icon": {
          "dark": "resources/add_emoji_dark.svg",
          "light": "resources/add_emoji_light.svg"
        }
      },
      {
        "command": "git-emoji-atomgit.formatSwitch",
        "title": "git emoji: format switch",
        "icon": {
          "dark": "resources/switch_dark.svg",
          "light": "resources/switch_light_svg"
        }
      },
      {
        "command": "git-emoji-atomgit.fetchNotice",
        "title": "git-emoji-atomgit: fetch notice"
      },
      {
        "command": "git-emoji-atomgit.noticeLink",
        "title": "git-emoji-atomgit: notice link"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "git-emoji-atomgit.gitEmoji",
          "alt": "git-emoji-atomgit.formatSwitch",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "GitEmojiAtomGit",
        "properties": {
          "GitEmojiAtomGit.setting.noticeToggle": {
            "type": "boolean",
            "description": "是否开启 AtomGit 消息助手",
            "default": true
          },
          "GitEmojiAtomGit.setting.AccessToken": {
            "type": "string",
            "markdownDescription": " 配置参考 [AtomGit 个人访问令牌](https://docs.atomgit.com/user/pats)",
            "default": ""
          },
          "GitEmojiAtomGit.setting.noticeInterval": {
            "type": "number",
            "minimum": 1,
            "default": 5,
            "description": "AtomGit 消息刷新时间间隔，单位为分钟，最小为1分钟"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^2.30.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.7.2"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}
